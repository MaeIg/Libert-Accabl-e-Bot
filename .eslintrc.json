{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-plusplus": "off",
    "import/extensions": "off",
    "no-console": "off",
    "no-lonely-if": "off",
    "consistent-return": "warn",
    "no-shadow": "warn",
    "import/prefer-default-export": "off"
  },
  "overrides": [
    {
      "files": ["*.test.*"],
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
